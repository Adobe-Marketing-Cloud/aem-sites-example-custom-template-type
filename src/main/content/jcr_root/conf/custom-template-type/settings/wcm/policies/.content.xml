                                    resourceType="foundation/components/video"
                                    type="Images"
                                    assetGroup="media"
                                    assetMimetype="video/*"
                                    droptarget="video"/>
                                <fragment
                                    jcr:primaryType="nt:unstructured"
                                    resourceType="dam/cfm/components/contentfragment"
                                    type="Content Fragment"
                                    assetGroup="media"
                                    assetMimetype="text/html"
                                    droptarget="fragment"/>
                            </assetToComponentMapping>
                        </cq:authoring>
                    </custom-template-type-default>
                    <custom-template-type-media
                        jcr:description="Limited list of allowed components only composed of media"
                        jcr:lastModified="{Date}2016-02-16T21:38:49.301+01:00"
                        jcr:lastModifiedBy="admin"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Custom Template Type Media"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="[/libs/wcm/foundation/components/image,/libs/wcm/foundation/components/text,/libs/foundation/components/video]"
                        policyResourceType="wcm/foundation/components/responsivegrid">
                        <cq:authoring jcr:primaryType="nt:unstructured">
                            <assetToComponentMapping jcr:primaryType="nt:unstructured">
                                <image jcr:primaryType="nt:unstructured"
                                    resourceType="wcm/foundation/components/image"
                                    type="Images"
                                    assetGroup="media"
                                    assetMimetype="image/*"
                                    droptarget="image"/>
                                <product jcr:primaryType="nt:unstructured"
                                    resourceType="commerce/components/product"
                                    type="Products"
                                    assetGroup="product"
                                    droptarget="product-data-reference"/>
                                <flash jcr:primaryType="nt:unstructured"
                                    resourceType="foundation/components/flash"
                                    type="Images"
                                    assetGroup="media"
                                    assetMimetype="application/x-shockwave-flash"
                                    droptarget="flash"/>
                                <document jcr:primaryType="nt:unstructured"
                                    resourceType="foundation/components/download"
                                    type="Images"
                                    assetGroup="media"
                                    assetMimetype="[application/vnd.openxmlformats,application/msword,application/vnd.ms-powerpoint,application/mspowerpoint,application/powerpoint,application/x-mspowerpoint,application/x-msexcel,application/x-excel,application/excel,application/vnd.ms-excel,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document]"
                                    droptarget="file"/>
                                <video jcr:primaryType="nt:unstructured"
                                    resourceType="foundation/components/video"
                                    type="Images"
                                    assetGroup="media"
                                    assetMimetype="video/*"
                                    droptarget="video"/>
                                <fragment
                                    jcr:primaryType="nt:unstructured"
                                    resourceType="dam/cfm/components/contentfragment"
                                    type="Content Fragment"
                                    assetGroup="media"
                                    assetMimetype="text/html"
                                    droptarget="fragment"/>
                            </assetToComponentMapping>
                        </cq:authoring>
                    </custom-template-type-media>
                </responsivegrid>
            </components>
        </foundation>
    </wcm>
    <extensions
        jcr:primaryType="nt:unstructured"
        sling:resourceType="nt:unstructured">
        <custom-template-type
            jcr:primaryType="nt:unstructured"
            sling:resourceType="nt:unstructured">
            <components
                jcr:primaryType="nt:unstructured"
                sling:resourceType="nt:unstructured">
                <page
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="nt:unstructured">
                    <default
                        jcr:description="Policy for Custom Template Type pages"
                        jcr:lastModified="{Date}2016-03-03T18:52:44.719+01:00"
                        jcr:lastModifiedBy="admin"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Custom Template Type Page"
                        sling:resourceType="wcm/core/components/policy/policy"
                        clientlibs="[custom-template-type.page]"/>
                </page>
            </components>
        </custom-template-type>
    </extensions>
</jcr:root>
